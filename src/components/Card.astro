---
/** Props: title?, noPadding? */
const { title, noPadding = false, class: className = '' } = Astro.props;
const paddingClass = noPadding ? 'no-padding' : '';
---

<div class={`card ${paddingClass} ${className}`}>
    {title && <h2 class="card-title">{title}</h2>}
    <slot />
</div>

<style lang="scss">
.card {
    flex-grow: 1;
    background: white;
    border-radius: 1rem;
    padding: 1.5rem;
    box-shadow: 0 0 12px rgba(0, 0, 0, 0.06);
    animation: fadeInUp 0.5s ease-out both;
    transition: transform 0.2s ease, box-shadow 0.2s ease;

    &:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
    }

    &.no-padding {
        padding: 0;
    }
}

.card-title {
    margin-top: 0;
    font-size: 1.25rem;
    font-weight: bold;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: none;
    }
}
</style>
