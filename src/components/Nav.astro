---
// yeet
const currentPath = Astro.url.pathname;
---

<nav class="navbar">
  <a href="/portfolio" class={`nav-link home${currentPath === '/' ? ' active' : ''}`} aria-disabled={currentPath === '/'} tabindex={currentPath === '/' ? -1 : undefined}>Home</a>
  <a href="/portfolio/about" class={`nav-link about${currentPath === '/portfolio/about' ? ' active' : ''}`} aria-disabled={currentPath === '/portfolio/about'} tabindex={currentPath === '/portfolio/about' ? -1 : undefined}>About</a>
  <a href="/portfolio/projects" class={`nav-link projects${currentPath === '/portfolio/projects' ? ' active' : ''}`} aria-disabled={currentPath === '/portfolio/projects'} tabindex={currentPath === '/portfolio/projects' ? -1 : undefined}>Projects</a>
  <a href="/portfolio/contact" class={`nav-link contact${currentPath === '/portfolio/contact' ? ' active' : ''}`} aria-disabled={currentPath === '/portfolio/contact'} tabindex={currentPath === '/portfolio/contact' ? -1 : undefined}>Contact</a>
</nav>

<style lang="scss">
.navbar {
  display: flex;
  justify-content: center;
  gap: 2rem;
  padding: 1.5rem;
  background: #eee;
  font-family: 'IBM Plex Sans', sans-serif;
  box-shadow: 0 0px 17px #9560d38f;
}

.nav-link {
  text-decoration: none;
  color: #444;
  font-weight: bold;
  position: relative;
  transition: color 0.3s ease;

  &::after {
    content: '';
    display: block;
    height: 2px;
    width: 0%;
    transition: width 0.3s ease;
    background-color: currentColor;
    position: absolute;
    bottom: -4px;
    left: 0;
  }

  &:hover::after {
    width: 100%;
  }

  &.home:hover {
    color: #a084ca;
  }

  &.about:hover {
    color: #ff69b4;
  }

  &.projects:hover {
    color: #4caf50;
  }

  &.contact:hover {
    color: #2196f3;
  }

  &.active {
    pointer-events: none;
    opacity: 0.6;
    cursor: default;
  }
}
</style>
