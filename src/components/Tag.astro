---
const { type } = Astro.props as { type: string };

const tagColors: Record<string, string> = {
  JavaScript: '#fff8b3',
  TypeScript: '#c5dfff',
  React: '#d0f4ff',
  PostgreSQL: '#c3d4f3',
  Groovy: '#cceeff',
  Java: '#f6c8b8',
  Electron: '#d3f0f5',
  FHIR: '#ffd6d6',
  CI: '#b2f2e6',
};

function stringToColor(str: string) {
  let hash = 0;
  for (let i = 0; i < str.length; i++) {
    hash = str.charCodeAt(i) + ((hash << 5) - hash);
  }
  const hue = hash % 360;
  return `hsl(${hue}, 60%, 85%)`; // softer pastel tone
}

const bgColor = tagColors[type] || stringToColor(type);
---

<span
  style={`
    display: inline-block;
    padding: 0.25rem 0.6rem;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 9999px;
    color: #333;
    background-color: ${bgColor};
    white-space: nowrap;
  `}
>
  {type}
</span>
