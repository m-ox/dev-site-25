---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card/Card.astro';
---

<Layout title="Home">
  <style lang="scss">
    body {
          background: linear-gradient(to bottom, #e6e6e7, #ccc2d7);
    }

    .homepage {
      display: flex;
      gap: 2rem;
      margin: 4rem auto;
      flex-wrap: wrap;
    }

    .intro {
      flex-basis: auto;
      flex-grow: 50;
    }

    .quote {
      text-align: center;
      font-style: italic;
      opacity: 0.7;
    }
  </style>

  <section class="homepage">
    <Card class="intro" title="Hi, I’m Maud.">
      <p>
        Building tools with code, making messes with paint.<br />
        Somewhere between structured logic and creative residue.
      </p>
    </Card>

    <Card title="Projects" style="text-align:center;">
      <a href="/portfolio/projects">See what I’ve built</a>
    </Card>

    <Card title="Resume" style="text-align:center;">
      <a href="https://docs.google.com/document/d/1HIBwf6mr-sEhKQi-kutVROjBaWRFJSqasI2gcFCEYWs/edit?usp=sharing">Work history and skills</a>
    </Card>

    <Card title="Contact" style="text-align:center;">
      <a href="/portfolio/contact">Reach out</a>
    </Card>
    
  </section>
</Layout>
